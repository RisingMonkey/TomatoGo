<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"



    android:background="#ffffff">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:id="@+id/nickname"
android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/nickname"
        android:textAlignment="textStart"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_alignParentEnd="true"
        android:paddingLeft="16dp"
        android:minWidth="50000dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的皮肤"
        android:id="@+id/skin"
        android:layout_below="@+id/nickname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:drawableLeft="@mipmap/skin"
        android:paddingLeft="16dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的成就"
        android:id="@+id/achievement"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:layout_below="@+id/label"
        android:drawableLeft="@mipmap/achievement"
        android:paddingLeft="16dp"
        android:textSize="20dp"
        android:allowUndo="false"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的番茄"
        android:id="@+id/tomato"
        android:layout_below="@+id/achievement"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:drawableLeft="@mipmap/tomato"
        android:paddingLeft="16dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:id="@+id/setting"
        android:layout_below="@+id/tomato"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:drawableLeft="@mipmap/settings"
        android:paddingLeft="16dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的标签"
        android:id="@+id/label"
        android:layout_below="@+id/skin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:drawableLeft="@mipmap/label"
        android:textSize="20dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:id="@+id/exit"
        android:minWidth="200dp"
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_below="@+id/view5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:id="@+id/view4"
        android:layout_alignTop="@+id/tomato"
        android:layout_alignParentStart="true"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:layout_above="@+id/setting"
        android:layout_alignParentStart="true"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:layout_alignTop="@+id/skin"
        android:layout_alignParentStart="true"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:layout_alignTop="@+id/label"
        android:layout_alignParentStart="true"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:layout_alignTop="@+id/achievement"
        android:layout_alignParentStart="true"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignTop="@+id/setting"></View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape"
        android:layout_alignBottom="@+id/setting"
        android:layout_alignParentStart="true"
        android:id="@+id/view5"></View>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minWidth="30dp"
        android:minHeight="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView"
        android:minHeight="30dp"
        android:minWidth="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView"
        android:layo />
</RelativeLayout>
